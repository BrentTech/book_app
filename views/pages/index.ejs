<!DOCTYPE html>
<html>
  <head>
    <title>Book Emporium</title>
    <link href="./styles/reset.css" rel="stylesheet" type="text/css">

    <link href="./styles/base.css" rel="stylesheet" type="text/css">
    <link href="./styles/layout.css" rel="stylesheet" type="text/css">
    <link href="./styles/modules.css" rel="stylesheet" type="text/css">
    <link href="./styles/icons.css" rel="stylesheet" type="text/css">
  </head>
  <body>
    <main>
      <h3>Search by Title or Author</h3>
      <form action="/searches" method="post">
        <input type="text" name="search" placeholder="Look for an Author" required>
        <fieldset>
          <label for="title">
            <span>Title</span>
            <input type="radio" name="search" value="title" required>
          </label>
        </fieldset>
        <fieldset>
          <label for="author">
            <span>Author</span>
            <input type="radio" name="search" value="author" required>
          </label>
        </fieldset>
        <button type="submit">Search the Google Books API</button>
      </form>
    </main>
  </body>
</html>
