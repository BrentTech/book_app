<!DOCTYPE html>
<html>
<head>
    <%- include('../../layout/head') %>
</head>
<body>
  <header>
    <%- include('../../layout/header') %>
  </header>
  <main>
    <h2>Search Results</h2>
    <ul class="search-results">
      <% searchResults.forEach(book => { %>
        <li data-book-id="<%= book.isbn %>">
          <div class="book-container">
            <img src=<%= book.image_url %> alt=<%= book.title %> title=<%= book.title %>>
            <section>
              <h3><%= book.title %></h3>
              <span><%= book.author %></span>
              <p><%= book.description %></p>
            </section>
            <!-- <form>
              <button type= 'submit'>Select this book</button>
            </form> -->
            <!-- this is here we need to add the attributes for hiding and unhiding -->
            <form action="/add" method="post">
              <fieldset>
                <!-- Title -->
                <label for="title">
                  <span>Title</span>
                  <input type="text" name="title" value="<%= book.title %>">
                </label>
                <!-- Author -->
                <label for="author">
                  <span>Author</span>
                  <input type="text" name="author" value="<%= book.author %>">
                <!-- ISBN -->
                <label for="isbn">
                  <span>ISBN</span>
                  <input type="text" name="isbn" value="<%= book.isbn %>">
                <!-- image url -->
                <label for="image_url">
                  <span>Image URL</span>
                  <input type="text" name="image_url" value="<%= book.image_url %>">
                <!-- description -->
                <label for="description">
                  <span>Description</span>
                  <input type="text" name="description" value="<%= book.description %>">
                <!-- bookshelf -->
                <label for="bookshelf">
                  <span>Bookshelf</span>
                  <input type="text" name="bookself" value="<%= book.bookshelf %>">
                <button type="submit">Add to Saved List</button>
              </fieldset>
            </form>
          </div>
        </li>
        <% }) %>
    </ul>
  </main>
  <footer>
    
  </footer>
</body>
</html>